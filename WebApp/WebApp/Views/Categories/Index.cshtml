@model IEnumerable<WebApp.Models.ViewModels.CategoryViewModel>

@{
    ViewBag.Title = "Thể loại";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>THỂ LOẠI</h2>

<p>
    @Html.ActionLink("Tạo mới", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>Chức năng</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                <button class="btn btn-success">@Html.ActionLink("Chỉnh sửa", "Edit", new { id = item.Id })</button>
                <button class="btn btn-default">@Html.ActionLink("Chi tiết", "Details", new { id = item.Id })</button>
                <button class="btn btn-danger">@Html.ActionLink("Xóa", "Delete", new { id = item.Id })</button>
            </td>
        </tr>
    }

</table>
