    <![endif]-->

</head>
<body>
    <!-- HEADER -->
    @Html.Partial("_HeaderPatialView")
    <!-- SECTION -->
    <div class="section">
        <!-- container -->
        <div class="container">
            <!-- row -->
            <div class="row">
                <!-- ASIDE -->
                <div id="aside" class="col-md-3">
                    <!-- aside Widget -->
                    <div class="aside">
                        <h3 class="aside-title">Thể loại</h3>
                        <div class="checkbox-filter">
                            @{
                                var listcategory = (List<WebApp.Models.ViewDto.CategoryDto>)ViewBag.ListCate;
                                int count = 1;
                                foreach (var item in listcategory)
                                {
                                    var name = item.Name;
                                    <div class="input-checkbox">
                                        <input type="checkbox" id="category-@count">
                                        <span>-</span>
                                        @if (name == "Gamming")
                                        {
                                            <a href="@Url.Action("PageProductDetail", "Home", new { page = 1, Id = TempData["GammingId"] })">@item.Name</a>
                                        }
                                        else if (name == "Doanh nhân")
                                        {
                                            <a href="@Url.Action("PageProductDetail", "Home", new { page = 1, Id = TempData["DoanhNhanId"] })">@item.Name</a>
                                        }
                                        else if (name == "Đồ họa")
                                        {
                                            <a href="@Url.Action("PageProductDetail", "Home", new { page = 1, Id = TempData["DoHoaId"] })">@item.Name</a>
                                        }
                                        <small>(@item.QuantityCate)</small>
                                    </div>
                                    count++;
                                }
                            }
                        </div>
                    </div>
                    <!-- /aside Widget -->
                    <!-- aside Widget -->
                    <div class="aside">
                        <h3 class="aside-title">Giá</h3>
                        <div class="price-filter">
                            <div id="price-slider"></div>
                            <div class="input-number price-min">
                                <input id="price-min" type="number">
                                <span class="qty-up">+</span>
                                <span class="qty-down">-</span>
                            </div>
                            <span>-</span>
                            <div class="input-number price-max">
                                <input id="price-max" type="number">
                                <span class="qty-up">+</span>
                                <span class="qty-down">-</span>
                            </div>
                        </div>
                    </div>
                    <!-- /aside Widget -->
                    <!-- aside Widget -->
                    @*<div class="aside">
                            <h3 class="aside-title">Thương hiệu</h3>

                            <div class="checkbox-filter">
                                @{
                                    var listCategory = (List<WebApp.Models.ViewModels.ManufactureViewModel>)ViewBag.ListManu;
                                    var quantity = (List<WebApp.Models.ViewDto.ManufactureDto>)ViewBag.QuantityManu;
                                    var dem = 1;
                                    foreach (var item in listCategory)
                                    {
                                        <div class="input-checkbox">
                                            <input type="checkbox" id="brand-@dem">
                                            <span>-</span>
                                            <a href="#" class="clickManu">@item.Name</a>
